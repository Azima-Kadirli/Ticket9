@model List<EmployeeGetVM>
<div class="container">
    <div class="row">

        <div class="col-2">
            <a class="btn btn-success" asp-action="Create">Create</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">FullName</th>
                    <th scope="col">Image</th>
                    <th scope="col">CategoryName</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <th scope="row">@employee.Id</th>
                        <td>@employee.FullName</td>
                        <td>@employee.Image</td>
                        <td>@employee.CategoryName</td>
                        <td>

                            <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>